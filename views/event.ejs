<!DOCTYPE html>
<html>
  <head>
    <title>Web Game Event Page</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap//3.0.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/event.css" />
  </head>
  <body>

    <% include navbar %>

    <div id="wrap">
      <div id="header">
        <h2>Web Game Event: <%= event_id %></h2>
      </div><!-- /header -->
      <div id="inner">
        <div id ="largeWrap">
          <h2>Game Feild</h2>
          <div id="game_field_wrapper"></div>
          <h3>Time</h3>
          <p id="remain_time">60</p>
          <h3>Score</h3>
          <p id="your_score">0</p>
          <button class="btn btn-primary btn-block btn-start">START</button>
        </div>
        <div id="sideBetaWrap">
          <div id="jsPlayerBox">
            <h2>Player List</h2>
            <ul></ul>
          </div>

          <div class="clear"><hr /></div>

          <div id="jsMessageBox">
            <h2>Chat Box</h2>
            <ul></ul>
          </div>

          <form id="jsMessageForm">
            <input type="text" id="jsMessageInput">
            <input type="submit" value="Send">
          </form>
        </div><!-- /sideBetaWrap -->

      </div><!-- /inner -->

      <div id="footer">
        <h2>Page Footer</h2>
      </div><!-- /footer -->
    </div><!-- /wrap -->

    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script src="/js/game.js"></script>
    <script>
      //Dynamic generated bye server
      var event_id = <%= event_id %>;
      var player_id = <%= userid %>;
      var player_name = "<%= username %>";
    </script>
    <script src="/js/event.js"></script>
  </body>
</html>
